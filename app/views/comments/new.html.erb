<div class="topic-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">Add your comment</h1>
        <%= form_for @comment do |f| %>

          <div class="form-group">
            <%= f.label :contents %>
            <%= f.text_area :contents, class:'form-control' %>
          </div>

      <%= f.hidden_field :topic_id, :value => params[:a]   %>
          <%= f.submit '投稿', class: 'btn btn-black btn-block' %>

        <% end %>
      </div>
     </div>
    </div>
  </div>
